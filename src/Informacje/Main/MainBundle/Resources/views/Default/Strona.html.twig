{{ form_widget(form.komentarz) }} {{ form_errors(form.komentarz) }} </br>  
{{ form_widget(form.podpis) }} {{ form_errors(form.podpis) }} </br>  
{{ form_rest(form) }}
{{ form_errors(form) }}
<input type="submit" />
</form>
