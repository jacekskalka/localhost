{# <img  id="big" src="{{ asset('uploads/documents') }}/{{ files[0] }}"  /> #}
<td>
<td><a id="next_big" href="#"><img class="arrow" src="{{ asset('img/right_arrow.png') }}"/></a> <td>
</tr></table>
</div>

