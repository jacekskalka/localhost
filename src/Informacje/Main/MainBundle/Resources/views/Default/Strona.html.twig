{% extends '::base.html.twig' %}

{% block title %} {{ wiadomość.header1 }}  {% endblock %}
{% block stylesheets %}
	<link href="{{ asset('css/strona.css') }}" type="text/css" rel="stylesheet" /> 
{% endblock %}
{% block body %}
<div id="wrapper">
<h1> {{ wiadomość.header2 }} </h1>

{# GALERIA #}
