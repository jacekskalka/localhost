<em style="float:right"> {{ komentarz.plus }} </em>
 <hr/> {{ komentarz.komentarz |nl2br }} </br> </div>
 <div class="komentarz2" style="display:none;"> komentarz....</div>
 <em class="odpowiedz" style="margin-left:510px; color:white; background-color:red"> Odpowiedz </em> 
{% endfor %}

</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/jquery.js') }}" > </script>
<script type="text/javascript" src="{{ asset('js/galeria.js') }}" > </script>
<script type="text/javascript" src="{{ asset('js/komentarze.js') }}" > </script>
{% endblock %}